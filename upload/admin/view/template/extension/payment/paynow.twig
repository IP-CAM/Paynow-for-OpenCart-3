{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-paynow" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
    <div class="container-fluid">
      {% if error_warning %}
        <div class="alert alert-danger alert-dismissible">
          <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        </div>
        <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry-paynow_integration_id"><span data-toggle="tooltip" title="{{ help_paynow_integration_id }}">{{ entry_paynow_integration_id }}</span></label>
              <div class="col-sm-10">
                  <input type="text" name="payment_paynow_integration_id" value="{{ payment_paynow_integration_id }}" placeholder="{{ entry_paynow_integration_id }}" id="entry-paynow_integration_id" class="form-control" />
                  {% if error_paynow_integration_id %}
                      <div class="text-danger">{{ error_paynow_integration_id }}</div>
                  {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry-paynow_integration_key"><span data-toggle="tooltip" title="{{ help_paynow_integration_key }}">{{ entry_paynow_integration_key }}</span></label>
              <div class="col-sm-10">
                  <input type="password" name="payment_paynow_integration_key" value="{{ payment_paynow_integration_key }}" placeholder="{{ entry_paynow_integration_key }}" id="entry-paynow_integration_key" class="form-control" />
                  {% if error_paynow_integration_key %}
                      <div class="text-danger">{{ error_paynow_integration_key }}</div>
                  {% endif %}
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry-paynow_store_name"><span data-toggle="tooltip" title="{{ help_paynow_store_name }}">{{ entry_paynow_store_name }}</span></label>
              <div class="col-sm-10">
                  <input type="text" name="payment_paynow_store_name" value="{{ payment_paynow_store_name }}" placeholder="{{ entry_paynow_store_name }}" id="entry-paynow_store_name" class="form-control" />
                  {% if error_paynow_store_name %}
                      <div class="text-danger">{{ error_paynow_store_name }}</div>
                  {% endif %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="entry-paynow_total"><span data-toggle="tooltip" title="{{ help_paynow_total }}">{{ entry_paynow_total }}</span></label>
              <div class="col-sm-10">
                  <input type="number"min="0" name="payment_paynow_total" value="{{ payment_paynow_total }}" placeholder="{{ entry_paynow_total }}" id="entry-paynow_total" class="form-control" />
              </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_paynow_sort_order" value="{{ payment_paynow_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
              <div class="col-sm-10">
                  <select name="payment_paynow_geo_zone_id" id="input-geo-zone" class="form-control">
                      <option value="0">{{ text_all_zones }}</option>
                      {% for geo_zone in geo_zones %}
                          {% if geo_zone.geo_zone_id == payment_paynow_geo_zone_id %}
                              <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                          {% else %}
                              <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                          {% endif %}
                      {% endfor %}
                  </select>
              </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                    <select name="payment_paynow_status" id="input-status" class="form-control">
                        {% if payment_paynow_status %}
                            <option value="1" selected="selected">{{ text_enabled }}</option>
                            <option value="0">{{ text_disabled }}</option>
                        {% else %}
                            <option value="1">{{ text_enabled }}</option>
                            <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %}
                    </select>
                </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}